@model Cinema.Models.Movie

<div class="content">
    <h2>Create Movie</h2>

    <form method="post" enctype="multipart/form-data" action="/movie/create">
        <div class="mb-3">
            <label>Name</label>
            <input type="text" class="form-control" name="Name" required />
        </div>

        <div class="mb-3">
            <label>Description</label>
            <textarea class="form-control" name="Description"></textarea>
        </div>

        <div class="mb-3">
            <label>Price</label>
            <input type="number" step="0.01" class="form-control" name="Price" />
        </div>

        <div class="mb-3">
            <label>Main Image</label>
            <input type="file" name="mainImage" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Sub Images</label>
            <input type="file" name="subImages" class="form-control" multiple />
        </div>

        <div class="mb-3">
            <label>Category</label>
            <select name="CategoryId" class="form-select">
                @foreach (var c in ViewBag.Categories)
                {
                    <option value="@c.Id">@c.Title</option>
                }
            </select>
        </div>

        <div id="schedulesWrapper" class="mb-3">
            <label class="form-label">Available Showtimes</label>
            <div class="schedule-item mb-2">
                <input type="datetime-local" name="ShowTimes" class="form-control" />
            </div>
        </div>
        <button type="button" id="addScheduleBtn" class="btn btn-sm btn-outline-primary">+ Add Another Time</button>

        <div class="mb-3">
            <label>Cinema</label>
            <select name="CinemaId" class="form-select">
                @foreach (var c in ViewBag.Cinemas)
                {
                    <option value="@c.Id">@c.Name</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label>Actors</label>
            <select name="ActorIds" class="form-select" multiple>
                @foreach (var actor in ViewBag.Actors)
                {
                    <option value="@actor.Id">@actor.Name</option>
                }
            </select>
            <small class="text-muted">Press Ctrl (or Cmd) to select multiple actors</small>
        </div>

        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" name="Status" value="true" />
            <label class="form-check-label">Active</label>
        </div>

        <input type="submit" class="btn btn-primary" value="Create" />
    </form>
</div>

<script>
    document.getElementById('addScheduleBtn').addEventListener('click', () => {
        const wrapper = document.getElementById('schedulesWrapper');
        const input = document.createElement('div');
        input.classList.add('schedule-item', 'mb-2');
        input.innerHTML = '<input type="datetime-local" name="ShowTimes" class="form-control" />';
        wrapper.appendChild(input);
    });
</script>
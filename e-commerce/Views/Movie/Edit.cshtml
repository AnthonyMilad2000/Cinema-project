@model Cinema.Models.Movie

<div class="content">
    <h2>Edit Movie</h2>

    <form method="post" enctype="multipart/form-data" action="/movie/edit">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="mb-3">
            <label>Name</label>
            <input type="text" class="form-control" name="Name" value="@Model.Name" required />
        </div>

        <div class="mb-3">
            <label>Description</label>
            <textarea class="form-control" name="Description">@Model.Description</textarea>
        </div>

        <div class="mb-3">
            <label>Price</label>
            <input type="number" step="0.01" class="form-control" name="Price" value="@Model.Price" />
        </div>

        <div class="mb-3">
            <label>Category</label>
            <select asp-for="CategoryId"
                    class="form-control"
                    asp-items="@(new SelectList(ViewBag.Categories, nameof(Cinema.Models.Category.Id), nameof(Cinema.Models.Category.Title), Model.CategoryId))">
                <option value="">-- Select Category --</option>
            </select>
        </div>
        <div class="mb-3">
            <label>Cinema</label>
            <select asp-for="CinemaId"
                    class="form-control"
                    asp-items="@(new SelectList(ViewBag.Cinemas, nameof(Cinema.Models.Cinemas.Id), nameof(Cinema.Models.Cinemas.Name), Model.CinemaId))">
                <option value="">-- Select Category --</option>
            </select>
        </div>


        <div class="mb-3">
            <label>Actors</label>
            <select asp-for="ActorIds"
                    class="form-select"
                    asp-items="@(new MultiSelectList(ViewBag.Actors, "Id", "Name", Model.ActorIds))"
                    multiple>
            </select>

        </div>


        


        <div class="mb-3">
            <label>Current Main Image</label><br />
            @if (!string.IsNullOrEmpty(Model.MainImage))
            {
                <img src="~/assets/@Model.MainImage" width="120" height="120"
                     style="object-fit:cover;border-radius:6px;border:1px solid #ddd;" />
            }
            else
            {
                <span class="text-muted">No Main Image</span>
            }
        </div>

        <div class="mb-3">
            <label>Change Main Image</label>
            <input type="file" name="mainImage" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Sub Images</label><br />
            @if (Model.SubImages != null && Model.SubImages.Any())
            {
                <div class="d-flex flex-wrap gap-3">
                    @foreach (var img in Model.SubImages)
                    {
                        <div class="position-relative" style="display:inline-block;">
                            <img src="~/assets/@img.ImagePath" width="100" height="100"
                                 style="object-fit:cover;border-radius:8px;border:1px solid #ccc;" />
                            <button type="button" class="btn btn-danger btn-sm position-absolute top-0 end-0 delete-subimage"
                                    data-id="@img.Id" style="padding:2px 6px;border-radius:50%;">×</button>
                        </div>
                    }
                </div>
            }
            else
            {
                <span class="text-muted">No Sub Images</span>
            }
        </div>

        <div class="mb-3">
            <label>Add More Sub Images</label>
            <input type="file" name="subImages" class="form-control" multiple />
        </div>

        <div class="mb-3">
            <label>Show Times</label>
            <div id="showtimes-wrapper">
                @if (Model.Schedules != null && Model.Schedules.Any())
                {
                    foreach (var sch in Model.Schedules.ToList())
                    {
                        <div class="input-group mb-2 showtime-item">
                            <input type="datetime-local"
                                   name="ShowTimes"
                                   class="form-control"
                                   value="@sch.ShowTime.ToString("yyyy-MM-ddTHH:mm")" />
                            <button type="button" class="btn btn-danger remove-showtime-btn">×</button>
                        </div>
                    }
                }
                else
                {
                    <div class="text-muted">No showtimes yet</div>
                }
            </div>

            <button type="button" id="add-showtime-btn" class="btn btn-success btn-sm mt-2">
                + Add Show Time
            </button>
        </div>
        <div class="form-check mb-3">
            <input class="form-check-input"
                   type="checkbox"
                   name="Status"
                   value="true"
                   @(Model.Status ? "checked" : "") />
            <label class="form-check-label">Active</label>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="/movie/index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <script>
        document.querySelectorAll(".delete-subimage").forEach(btn => {
            btn.addEventListener("click", function () {
                if (confirm("Are you sure you want to delete this image?")) {
                    const id = this.dataset.id;
                    fetch("/movie/DeleteSubImage", {
                        method: "POST",
                        headers: { "Content-Type": "application/x-www-form-urlencoded" },
                        body: "id=" + id
                    })
                        .then(r => r.json())
                        .then(data => {
                            if (data.success) {
                                this.closest("div.position-relative").remove();
                            }
                        });
                }
            });
        });

                 document.getElementById("add-showtime-btn").addEventListener("click", function () {
            const wrapper = document.getElementById("showtimes-wrapper");

            const div = document.createElement("div");
            div.classList.add("input-group", "mb-2", "showtime-item");
            div.innerHTML = `
                <input type="datetime-local" name="ShowTimes" class="form-control" />
                <button type="button" class="btn btn-danger remove-showtime-btn">×</button>
            `;
            wrapper.appendChild(div);
        });

        document.addEventListener("click", function (e) {
            if (e.target.classList.contains("remove-showtime-btn")) {
                e.target.closest(".showtime-item").remove();
            }
        });
    </script>
}

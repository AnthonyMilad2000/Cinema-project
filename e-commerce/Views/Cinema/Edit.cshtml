@model Cinema.Models.Cinemas

<div class="content">
    <h2>Edit Cinema</h2>

    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Replace File (optional)</label>

            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <div class="mt-2">
                    <p>Current File:</p>

                    @if (Model.Image.EndsWith(".jpg") || Model.Image.EndsWith(".jpeg") || Model.Image.EndsWith(".png") || Model.Image.EndsWith(".gif"))
                    {
                        <img src="/assets/@Model.Image" alt="Old file preview" width="150" height="150" style="object-fit:cover; border:1px solid #ccc; border-radius:8px;" />
                    }
                    else
                    {
                        <a href="/assets/@Model.Image" target="_blank" class="btn btn-outline-secondary btn-sm">
                            Preview File
                        </a>
                    }
                </div>
            }

            <input type="file" name="file22" class="form-control mt-2" />
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/cinema/index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

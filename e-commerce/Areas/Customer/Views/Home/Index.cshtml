@{
    Layout = "~/Areas/Customer/Views/Home/Shared/_CustomerLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<div class="card mb-3">
    <div class="card-body">
        <div class="row flex-between-center">
            <div class="col-sm-auto mb-2 mb-sm-0">
                <h6 class="mb-0">Showing 1-24 of 205 Products</h6>
            </div>
            <div class="col-sm-auto">
                <div class="row gx-2 align-items-center">
                    <div class="col-auto">
                        <form class="row gx-2">
                            <div class="col-auto"><small>Sort by:</small></div>
                            <div class="col-auto">
                                <select class="form-select form-select-sm" aria-label="Bulk actions">
                                    <option selected="">Best Match</option>
                                    <option value="Refund">Newest</option>
                                    <option value="Delete">Price</option>
                                </select>
                            </div>
                        </form>
                    </div>
                    <div class="col-auto pe-0"> <a class="text-600 px-1" href="~/app/e-commerce/product/product-list.html" data-bs-toggle="tooltip" data-bs-placement="top" title="Product List"><span class="fas fa-list-ul"></span></a></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <div class="row">
            @foreach (var movie in Model.Movie)
            {
                <div class="mb-4 col-md-6 col-lg-4">
                    <div class="border rounded-1 h-100 d-flex flex-column justify-content-between pb-3">
                        <div class="overflow-hidden">
                            <div class="position-relative rounded-top overflow-hidden">
                                <a class="d-block" href="/customer/home/details/@movie.Id">
                                    <img class="img-fluid rounded-top" src="~/assets/@movie.MainImage" alt="@movie.Name" />
                                </a>
                                @if (!movie.Status)
                                {
                                    <span class="badge rounded-pill bg-danger position-absolute mt-2 me-2 z-index-2 top-0 end-0">Inactive</span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-success position-absolute mt-2 me-2 z-index-2 top-0 end-0">Active</span>
                                }
                            </div>

                            <div class="p-3">
                                <h5 class="fs-0">
                                    <a class="text-dark" href="/customer/home/details/@movie.Id">@movie.Name</a>
                                </h5>

                                <p class="fs--1 mb-2">@movie.Category?.Name</p>

                                <p class="fs--1 mb-2">
                                    Price: <strong>$@movie.Price</strong>
                                </p>

                                <p class="fs--1 mb-2">
                                    Show Times:
                                    @if (movie.Schedules.Count > 0)
                                    {
                                        <ul class="mb-0">
                                            @foreach (var schedule in movie.Schedules)
                                            {
                                                <li>@schedule.ShowTime.ToString("dd/MM/yyyy HH:mm")</li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <span>No schedules available</span>
                                    }

                                </p>

                                @* <p class="fs--1 mb-1">
                                    Available Cinemas: <strong>@movie.Cinema?.Name</strong>
                                </p> *@
                            </div>
                        </div>

                        <div class="d-flex flex-between-center px-3 mt-auto">
                            @* <div>
                                <span class="text-muted">Cinemas: @movie.CinemaId</span>
                            </div> *@

                            <div>
                                <button class="btn btn-sm btn-falcon-default me-2" href="#" title="Add to Wish List"><span class="far fa-heart"></span></button>
                               <form asp-action="AddToCart" asp-controller="Cart">
                                    <input hidden name="movieId" value="@movie.Id" />
                                    <input hidden type="number" value="1" name="count" />

                                    <button type="submit" class="btn btn-sm btn-falcon-default" title="Book Now"><span class="fas fa-ticket-alt"></span></button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="card-footer bg-light d-flex justify-content-center">
            <div>
                @if (Model.CurrentPage > 1)
                {
                    <a class="btn btn-falcon-default btn-sm me-2" href="@Url.Action("Index", new { page = Model.CurrentPage - 1 })"><span class="fas fa-chevron-left"></span></a>
                }
                else
                {
                    <button class="btn btn-falcon-default btn-sm me-2" disabled><span class="fas fa-chevron-left"></span></button>
                }

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    if (i == Model.CurrentPage)
                    {
                        <a class="btn btn-sm btn-falcon-default text-primary me-2" href="@Url.Action("Index", new { page = i })">@i</a>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-falcon-default me-2" href="@Url.Action("Index", new { page = i })">@i</a>
                    }
                }

                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <a class="btn btn-falcon-default btn-sm" href="@Url.Action("Index", new { page = Model.CurrentPage + 1 })"><span class="fas fa-chevron-right"></span></a>
                }
                else
                {
                    <button class="btn btn-falcon-default btn-sm" disabled><span class="fas fa-chevron-right"></span></button>
                }
            </div>
        </div>

</div>

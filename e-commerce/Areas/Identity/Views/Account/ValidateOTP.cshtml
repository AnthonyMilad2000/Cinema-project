@using Cinema.Models.ViewModels
@model ValidateOTP
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Areas/Identity/Views/Shared/_AuthLayout.cshtml";
}

<div class="row flex-center min-vh-100 py-6 text-center">
    <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
        <a class="d-flex flex-center mb-4" asp-controller="Home" asp-action="Index">
            <img class="me-2" src="~/img/icons/spot-illustrations/falcon.png" alt="" width="58" />
            <span class="font-sans-serif fw-bolder fs-5 d-inline-block">Cinema</span>
        </a>

        <div class="card shadow">
            <div class="card-body p-4 p-sm-5">
                <h5 class="mb-1">Validate OTP</h5>
                <small class="text-muted">Enter the OTP sent to your email.</small>

                <form asp-area="Identity" asp-controller="Account" asp-action="ValidateOTP" method="post" class="mt-4">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="UserId" value="@Model.UserId" />

                    <div class="mb-3">
                        <input type="text" asp-for="OTP" class="form-control"
                               placeholder="Enter OTP"/>
                        <span data-valmsg-for="OTP" data-valmsg-replace="true" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <button class="btn btn-primary d-block w-100 mt-3" type="submit">Validate OTP</button>
                    </div>
                </form>

                <div class="mt-2">
                    <a class="fs--1 text-600" asp-area="Identity" asp-controller="Account" asp-action="Login">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <partial name="_NotificationPartial" />
}

@using Cinema.Models.ViewModels
@model ForgetPasswordVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Areas/Identity/Views/Shared/_AuthLayout.cshtml";
}

<div class="row flex-center min-vh-100 py-6 text-center">
    <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
        <a class="d-flex flex-center mb-4" asp-controller="Home" asp-action="Index">
            <img class="me-2" src="~/img/icons/spot-illustrations/falcon.png" alt="" width="58" />
            <span class="font-sans-serif fw-bolder fs-5 d-inline-block">Cinema</span>
        </a>

        <div class="card shadow">
            <div class="card-body p-4 p-sm-5">
                <h5 class="mb-1">Forgot your password?</h5>
                <small class="text-muted">Enter your email and we'll send you a reset link.</small>

                <form asp-area="Identity" asp-controller="Account" asp-action="ForgetPassword" method="post" class="mt-4">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <input type="email" asp-for="UserNameOREmail" class="form-control"
                               placeholder="Email address" />
                        <span data-valmsg-for="UserNameOREmail" data-valmsg-replace="true" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <button class="btn btn-primary d-block w-100 mt-3" type="submit">Send reset link</button>
                    </div>
                </form>

                <a class="fs--1 text-600" asp-area="Identity" asp-controller="Account" asp-action="Login">Back to Login</a>
                <div class="mt-2">
                    <a class="fs--1 text-600" href="#!">I can't recover my account using this page <span class="d-inline-block ms-1">&rarr;</span></a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@using Cinema.Models.ViewModels
@model LoginVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Areas/Identity/Views/Shared/_AuthLayout.cshtml";
}

<div class="content">
    <div class="row flex-center min-vh-100 py-6">
        <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
            <a class="d-flex flex-center mb-4" asp-controller="Home" asp-action="Index">
                <img class="me-2" src="~/img/icons/spot-illustrations/falcon.png" alt="" width="58" />
                <span class="font-sans-serif fw-bolder fs-5 d-inline-block">Cinema</span>
            </a>

            <div class="card shadow">
                <div class="card-body p-4 p-sm-5">
                    <div class="row flex-between-center mb-2">
                        <div class="col-auto">
                            <h5 class="mb-0">Log in</h5>
                        </div>
                        <div class="col-auto fs--1 text-600">
                            <span>or</span>
                            <span><a asp-area="Identity" asp-controller="Account" asp-action="Register">Create an account</a></span>
                        </div>
                    </div>

                    <form asp-area="Identity" asp-controller="Account" asp-action="Login" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <input type="text" asp-for="UserNameOREmail" class="form-control"
                                   placeholder="Email or Username" />
                            <span data-valmsg-for="UserNameOREmail" data-valmsg-replace="true" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <input type="password" asp-for="Password" class="form-control"
                                   placeholder="Password"/>
                            <span data-valmsg-for="Password" data-valmsg-replace="true" class="text-danger"></span>
                        </div>

                        <div class="row flex-between-center mb-3">
                            <div class="col-auto">
                            
                            </div>
                            <div class="col-auto">
                                <a class="fs--1" asp-area="Identity" asp-controller="Account" asp-action="ForgetPassword">Forgot Password?</a>
                            </div>
                        </div>

                        <div class="mb-3">
                            <button class="btn btn-primary d-block w-100" type="submit">Log in</button>
                        </div>
                    </form>

                    <div class="position-relative mt-4">
                        <hr />
                        <div class="divider-content-center">or log in with</div>
                    </div>
                    <partial name="_ExternalAuthenticationPartial" />

                    @* <div class="row g-2 mt-2">
                        <div class="col-sm-6">
                            <a class="btn btn-outline-google-plus btn-sm d-block w-100" href="#">
                                <span class="fab fa-google-plus-g me-2"></span> Google
                            </a>
                        </div>
                        <div class="col-sm-6">
                            <a class="btn btn-outline-facebook btn-sm d-block w-100" href="#">
                                <span class="fab fa-facebook-square me-2"></span> Facebook
                            </a>
                        </div>
                    </div> *@

                </div>
            </div>

            <p class="text-center mt-3 small text-muted">
                © @DateTime.Now.Year - Cinema Platform
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

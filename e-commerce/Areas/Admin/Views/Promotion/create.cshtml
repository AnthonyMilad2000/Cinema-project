@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using Cinema.Models
@model Promotion

<div class="content">

    <h2>Create Promotion</h2>

    <form asp-action="CreatePromotion" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label>Code</label>
            <input asp-for="Code" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Discount (%)</label>
            <input asp-for="Discount" class="form-control" type="number" />
        </div>

        <div class="mb-3">
            <label>Valid To</label>
            <input asp-for="ValidTo" class="form-control" type="date" value="@Model.ValidTo?.ToString("yyyy-MM-dd")" />
        </div>

        <div class="mb-3">
            <label>Max Usage</label>
            <input asp-for="MaxUsage" class="form-control" type="number" />
        </div>

        <div class="mb-3">
            <label>Movie</label>
            <select asp-for="MovieId" asp-items="ViewBag.MovieList" class="form-control"></select>
        </div>


        <div class="form-check mb-3">
            <input asp-for="IsValid" class="form-check-input" type="checkbox" />
            <label class="form-check-label">Is Valid</label>
        </div>

        <button class="btn btn-success">Save</button>
        <a href="/Promotion" class="btn btn-secondary">Back</a>

    </form>

</div>

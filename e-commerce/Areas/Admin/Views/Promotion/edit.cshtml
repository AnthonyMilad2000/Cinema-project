@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using Cinema.Models
@model Promotion

<div class="content">

    <h2>Edit Promotion</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label>Code</label>
            <input asp-for="Code" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Discount (%)</label>
            <input asp-for="Discount" class="form-control" type="number" />
        </div>

        <div class="mb-3">
            <label>Valid To</label>
            <input asp-for="ValidTo" class="form-control" type="date" />
        </div>

        <div class="mb-3">
            <label>Max Usage</label>
            <input asp-for="MaxUsage" class="form-control" type="number" />
        </div>

        <div class="mb-3">
            <label>Movie</label>
            <select asp-for="MovieId" asp-items="ViewBag.MovieList" class="form-control">
                <option value="">-- Select Movie --</option>
            </select>
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsValid" class="form-check-input" type="checkbox" />
            <label class="form-check-label">Is Valid</label>
        </div>

        <button class="btn btn-success">Save</button>
        <a href="/Promotion" class="btn btn-secondary">Back</a>
    </form>

</div>
